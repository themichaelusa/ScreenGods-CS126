<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5B39C9"
    tools:context="com.example.michaelusa.screengods.PopularAlerts">

    <TextView
        android:id="@+id/tv_popalerts"
        android:layout_width="254dp"
        android:layout_height="36dp"
        android:text="POPULAR ALERTS"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_popbool"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.508" />

    <TextView
        android:id="@+id/tv_popbool"
        android:layout_width="274dp"
        android:layout_height="30dp"
        android:text="Nothing right now!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/popalertslist"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_popalerts"
        app:layout_constraintVertical_bias="0.27999997" />

    <ListView
        android:id="@+id/popalertslist"
        android:layout_width="360dp"
        android:layout_height="493dp"
        android:layout_marginBottom="-18dp"
        android:divider="#FFFFFF"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="74dp" />

</android.support.constraint.ConstraintLayout>
