<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5B39C9"
    tools:context="com.example.michaelusa.screengods.AddAlert">

    <Button
        android:id="@+id/btn_create"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:text="CREATE"
        android:textColor="#5B39C9"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.931"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938" />

    <Button
        android:id="@+id/btn_cancel"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:background="#FFFFFF"
        android:text="CANCEL"
        android:textColor="#5B39C9"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.253"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/btn_create"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.938" />

    <EditText
        android:id="@+id/et_ticker"
        android:layout_width="224dp"
        android:layout_height="64dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:backgroundTint="#FFFFFF"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_create"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.32"
        app:layout_constraintHorizontal_bias="0.9" />

    <EditText
        android:id="@+id/et_ulim"
        android:layout_width="227dp"
        android:layout_height="54dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text=""
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_create"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ticker"
        app:layout_constraintVertical_bias="0.216"
        app:layout_constraintHorizontal_bias="0.894" />

    <EditText
        android:id="@+id/et_llim"
        android:layout_width="227dp"
        android:layout_height="63dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text=""
        android:textColor="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/btn_create"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_ulim"
        app:layout_constraintVertical_bias="0.518"
        app:layout_constraintHorizontal_bias="0.898" />

    <TextView
        android:id="@+id/new_alert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="NEW ALERT"
        android:textColor="#FFFFFF"
        android:textSize="36sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_addticker"
        android:layout_width="111dp"
        android:layout_height="40dp"
        android:text="Ticker:"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_ticker"
        app:layout_constraintBottom_toTopOf="@+id/tv_addulim"
        app:layout_constraintTop_toTopOf="@+id/et_ticker"
        app:layout_constraintHorizontal_bias="0.64"
        app:layout_constraintVertical_bias="0.089"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/tv_addulim"
        android:layout_width="109dp"
        android:layout_height="61dp"
        android:layout_marginLeft="16dp"
        android:text="Upper Limit:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintRight_toLeftOf="@+id/et_ulim"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="@+id/et_ulim"
        android:layout_marginTop="0dp"
        app:layout_constraintHorizontal_bias="0.6" />

    <TextView
        android:id="@+id/tv_addllim"
        android:layout_width="106dp"
        android:layout_height="56dp"
        android:text="Lower Limit:"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_llim"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.592"
        app:layout_constraintTop_toTopOf="@+id/et_llim"
        android:layout_marginTop="7dp" />

</android.support.constraint.ConstraintLayout>
